<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hexanome.agenda.activities.DayActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:layout_width="wrap_content"
                        android:layout_margin="3dp">

                        <TextView
                            android:text="8h00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dayEventHourStart"
                            android:layout_weight="1"
                            android:gravity="top|right" />

                        <TextView
                            android:text="12h00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dayEventHourEnd"
                            android:layout_weight="1"
                            android:gravity="bottom|right" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:background="#ABB2B9" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:layout_width="wrap_content"
                        android:layout_margin="3dp">

                        <TextView
                            android:text="IHM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dayEventTextTitle"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|bold"
                            android:textSize="14sp" />

                        <TextView
                            android:text="J. Rouzaud-Cornabas\nA. Tabard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dayEventTextProf"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <TextView
                            android:text="Description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dayEventTextDescription"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textStyle="normal|italic"
                            android:textSize="12sp" />

                        <TextView
                            android:text="501:213"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/dayEventTextLieu"
                            android:layout_weight="1"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
