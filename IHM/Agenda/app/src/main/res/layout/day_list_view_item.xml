<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_above"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:minHeight="80dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/day_item_start_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="8h00"
                    android:textColor="@color/md_black_1000"/>

                <TextView
                    android:id="@+id/day_item_end_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="12h00"
                    android:textColor="@color/md_black_1000"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_item_color_view"
                android:background="@color/md_green_500"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_background"/>

                <LinearLayout
                    android:id="@+id/day_item_layout_colored"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/day_item_event_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="IHM"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/day_item_event_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="J. Rouzaud-Cornabas\nA. Tabard"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000"
                        />

                    <TextView
                        android:id="@+id/day_item_event_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="201:213"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

