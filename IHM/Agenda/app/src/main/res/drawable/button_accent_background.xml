<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/md_blue_A700"
                android:startColor="@color/md_blue_A400"/>
            <stroke
                android:width="1px"
                android:color="@color/md_grey_100" />
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/md_blue_A400"
                android:startColor="@color/md_blue_A200"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/md_blue_A400"
                android:startColor="@color/md_blue_A200"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
            <stroke
                android:width="1px"
                android:color="@color/md_grey_100" />
        </shape>
    </item>
</selector>